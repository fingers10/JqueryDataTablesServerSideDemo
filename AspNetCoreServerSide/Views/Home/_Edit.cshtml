@model Demo

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmEdit" method="put">
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Position"></label>
                            <input asp-for="Position" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Offices"></label>
                            <input asp-for="Offices" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="DemoNestedLevelOne.Experience"></label>
                            <input asp-for="DemoNestedLevelOne.Experience" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="DemoNestedLevelOne.Extension"></label>
                            <input asp-for="DemoNestedLevelOne.Extension" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="DemoNestedLevelOne.DemoNestedLevelTwos.StartDates"></label>
                            <input asp-for="DemoNestedLevelOne.DemoNestedLevelTwos.StartDates" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="DemoNestedLevelOne.DemoNestedLevelTwos.Salary"></label>
                            <input asp-for="DemoNestedLevelOne.DemoNestedLevelTwos.Salary" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <input asp-for="Id" type="hidden" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
            </div>
        </div>
    </div>
</div>